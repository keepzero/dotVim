snippet forl "for (let ...) {...}"
for (let ${1:i} = 0, ${2:len} = ${3:Things.length}; $1 < $2; $1++) {
	${0:${VISUAL}}
}
endsnippet
snippet forrl "reversed for (let ...) {...}"
for (let ${2:i} = ${1:Things.length} - 1; $2 >= 0; $2--) {
	${0:${VISUAL}}
}
endsnippet
snippet foril "for (let .. in ..) {...}"
for (let ${1:prop} in ${2:object}) {
	${0:$2[$1]}
}
endsnippet
